<div>

    <a href="/python/view">Python</a>
    <a href="/ruby/view">Ruby</a>
    <a href="/javascript/view">JavaScript</a>
    <a href="/c-sharp/view">C#</a>

    <h1>Languages Components</h1>
    <h2><%= @language[:name] %></h2>
    <h4><%= @language[:name] %> has nice methods like these:</h4>
    <ul>
      <% @language[:methods].each do |method| %>
        <li><%= method %></li>
      <% end %>
    </ul>
    <h4>It has useful libraries like these:</h4>
    <ul>
        <% @language[:libraries].each do |library| %>
            <li><%= library %></li>
        <% end %>
    </ul>
    <h2> I currently
    <% if @language[:known] == true %>
    know
    <% else %>
    do not know
    <% end %>
    this language.
    </h2>
</div>
